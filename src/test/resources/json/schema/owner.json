{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Owner",
  "description": "A pet owner",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0,
      "description": "The ID of the pet owner"
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "pattern": "^[a-zA-Z]+([ '-][a-zA-Z]+)*$",
      "description": "The first name of the pet owner"
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "pattern": "^[a-zA-Z]+([ '-][a-zA-Z]+)*\\.?$",
      "description": "The last name of the pet owner"
    },
    "address": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "The postal address of the pet owner"
    },
    "city": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80,
      "description": "The city of the pet owner"
    },
    "telephone": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20,
      "pattern": "^[0-9]*$",
      "description": "The telephone number of the pet owner"
    },
    "pets": {
      "type": "array",
      "description": "The pets owned by this individual including any booked vet visits",
      "items": {
        "$ref": "pet.json"
      }
    }
  },
  "required": ["firstName", "lastName", "address", "city", "telephone"]
}