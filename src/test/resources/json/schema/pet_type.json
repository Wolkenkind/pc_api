{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PetType",
  "description": "A pet type",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0,
      "description": "The ID of the pet type"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80,
      "description": "The name of the pet type"
    }
  },
  "required": ["id", "name"]
}