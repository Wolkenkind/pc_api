{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pet",
  "description": "A pet",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0,
      "description": "The ID of the pet"
    },
    "name": {
      "type": "string",
      "maxLength": 30,
      "description": "The name of the pet"
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "description": "The date of birth of the pet"
    },
    "type": {
      "$ref": "pet_type.json"
    },
    "ownerId": {
      "type": "integer",
      "minimum": 0,
      "description": "The ID of the pet's owner"
    },
    "visits": {
      "type": "array",
      "description": "Vet visit bookings for this pet",
      "items": {
        "$ref": "visit.json"
      }
    }
  },
  "required": ["name", "birthDate", "type", "ownerId"]
}